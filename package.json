{
  "name": "nextjs-template",
  "author": "Pete O'Shea",
  "license": "ISC",
  "version": "1.0.0",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "start": "next start",
    "test": "jest",
    "test-all": "npm run lint && npm run format && npm run type-check && npm run test",
    "type-check": "tsc --pretty --noEmit"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint",
      "prettier --write"
    ],
    "@(*.@(json|md|yml)|.*rc)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "next": "^12.1.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.35",
    "@types/react": "^17.0.43",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "autoprefixer": "^10.4.7",
    "babel-jest": "^27.5.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-react": "^7.30.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.7.2"
  }
}
